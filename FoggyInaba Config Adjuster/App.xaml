<Application
    x:Class="FoggyInaba_Config_Adjuster.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FoggyInaba_Config_Adjuster.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <converters:StringsToCommaListConverter x:Key="StringsToCommaList" />
            <converters:AuthorListToString x:Key="AuthorListToString" />
            <converters:OptionImageConverter x:Key="OptionImageConverter" />
            <converters:IsNullConverter x:Key="IsNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
