<ui:FluentWindow
    x:Class="FoggyInaba_Config_Adjuster.Views.Windows.WebViewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FoggyInaba_Config_Adjuster.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    ExtendsContentIntoTitleBar="True"
    SizeToContent="Manual"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    Title="FEMC Config Info"
    MinWidth="600"
    MinHeight="600"
    Height="Auto"
    Width="Auto"
    MaxWidth="1200"
    MaxHeight="1200"
    ResizeMode="CanMinimize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="FEMC Config Info"
            CloseWindowByDoubleClickOnIcon="True"
            Grid.Row="0"
            Height="25">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/logo.ico" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <wv2:WebView2 x:Name="WebViewer" Grid.Row="1" Width="NaN" Height="NaN" MinWidth="200" MinHeight="200" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0"/>
        <Button
            x:Name="AcceptButton"
            Content="OK"
            Width="200"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Grid.Row="2"
            Margin="0,10,0,0"
            Click="Accept_Click"/>
        <Button
            x:Name="RejectButton"
            Content="OK"
            Width="200"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Grid.Row="2"
            Margin="0,10,0,0"
            Click="Reject_Click"
            Visibility="Collapsed"/>
    </Grid>
</ui:FluentWindow>
